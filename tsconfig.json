{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom"],
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "baseUrl" : ".",
        "paths" : {
            "@jahia/js-server-core-private" : [ "types/manual/@jahia/js-server-core-private.d.ts"],
            "@jahia/js-server-core" : [ "types/manual/index.d.ts"],
            "*" : [ "types/generated/build/types/*", "types/manual/*"]
         },
    },
    "include": [
        "src/**/*.js",
        "types/manual/**/*.d.ts",
        "types/generated/build/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ],
    "typedocOptions": {
        "entryPoints": [
            "src/index.js",
            "types/**/*.d.ts"
        ],
        "out": "dist/docs"
    }
}
